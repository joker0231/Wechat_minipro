    <van-tab title="回帖">
            <view class="container">
                <mine_reply wx:for="{{reply_data}}" viewer_headpic="{{item.comment_user.avatar}}" viewer_name="{{item.comment_user.nickname}}" reply="{{item.content}}" type="{{item.target_topic.type}}" comment="{{item.target_topic.comment_num}}" favour="{{item.target_topic.collect_num}}" like="{{item.target_topic.like_num}}" post_content="{{item.target_topic.content}}" author_info="{{item.target_user.educationInfo.school}}" author_name="{{item.target_user.nickname}}" author_pic="{{item.target_user.avatar}}" />
            </view>
        </van-tab>
    <van-tab title="新朋友">
      <view class="container">
        <mine_friend wx:for="{{friendApplicationList}}" name="{{item.nick}}" headpic="{{item.avatar}}" data-friendid="{{item.userID}}" data-friendname="{{item.nick}}" bindtap="addfriend" />
        <view wx:if="{{ empty_showfriend }}" class="empty">

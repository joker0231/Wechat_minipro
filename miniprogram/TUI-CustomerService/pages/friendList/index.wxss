/* pages/mine/friendList/index.wxss */
.friendList-navigation{
  width: 100%;
  height: 92rpx;
  background-color: #FFFFFF;
  box-shadow: 0 10rpx 10rpx gainsboro;
  position: fixed;
  z-index: 10;
  top: 0;
  display: flex;
  align-items: center;
}

.friendList-navigation text{
  font-size: medium;
  margin-left: 54rpx;
}

.navswitch-style{
  font-size: 35rpx;
  color: #7B4D12;
}

.friendList-container{
  display: flex;
  flex-direction: column;
  position: relative;
  top: 90rpx;
}

.item{
  border-bottom: 1px solid #EDEDED;
  height: 149rpx;
  display: flex;
  position: relative;
  align-items: center;
}

.right .text {
  color: #A2A3A4;
  font-size: 24rpx;
  width: 466rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.avatar{
  width: 89rpx;
  height: 89rpx;
  border-radius: 50%;
  margin-left: 40rpx;
  margin-right: 22rpx;
  box-sizing: content-box;
}

.name {
  font-size:32rpx;
  color:rgba(35,35,35,1);
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}


.item .time{
  position: absolute;
  right: 34rpx;
  top: 44rpx;
  color: #9EA2AC;
  font-size: 20rpx;
}

.unreadCount {
  position: absolute;
  right: 34rpx;
  top: 79rpx;
  color: #fff;
  background-color: #F00C22;
  font-size: 20rpx;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx;
  height: 32rpx;
  min-width: 32rpx;
}

.empty{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1px solid #efefef;
}

.empty_text{
  font-size: 24rpx;
  color: #AAAAAA;
  margin-top: 52rpx;
}


.communitycard-container {
    box-sizing: border-box;
    width: 640rpx;
    height: 232rpx;
    background-color: #F9F2E7;
    border-radius: 15rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    /* margin-left: auto;
    margin-right: auto; */
    padding: 24rpx 0 16rpx 34rpx;
}

.communitycard-container text {
    font-size: 28rpx !important;
    box-sizing: border-box;
    font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif;
    color: #353535;
    text-align: left;
    line-height: 19rpx;
    height: 19rpx;
    line-height: 19rpx;
}

.headpic{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    overflow: hidden;
}

.communitycard-name{
    font-weight: 400;
    font-size: 30rpx;
}

.communitycard-school{
    font-weight: 200;
    font-size: 24rpx;
}

.communitycard-header{
    display: flex;
    align-items: center;
}

.communitycard-footer{
    display: flex;
    width: 40%;
    margin-top: 10rpx;
}

.communitycard-footer image{
    width: 35rpx;
    height: 35rpx;
}

.communitycard-icon {
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.communitycard-icon text{
  margin-left: 10rpx;
}

.communitycard-info {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  margin-left: 20rpx;
}

.communitycard-type{
    width: 180rpx;
    height: 90rpx;
    margin-left: auto;
}

.communitycard-content {
  /* margin-left: 10rpx; */
  /* font-weight: 400; */
  margin-right: 34rpx;
  width: 572rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  background-color: rgba(255, 255, 255, 0);
  box-sizing: border-box;
  font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif;
  color: #464646;
  text-align: left;
  line-height: normal;
  font-size: 28rpx;

  /* height: 44rpx; */
}

.hr{
    height: 3rpx;
    width: 100%;
    background-color: gainsboro;
    margin-top: 20rpx;
}
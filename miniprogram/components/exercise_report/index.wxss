.exercisecard-container {
  width: 640rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #F9F2E7;
  border-radius: 30rpx;
  padding: 25rpx;
}

.exercisecard-header{
  width: 100%;
  height: 122rpx;
  display: flex;
}

.exercisecard-header image{
  width: 110rpx;
  height: 122rpx;
}

.exercisecard-info{
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.exercisecard-infotitle {
  font-size: 24rpx;
}

.exercisecard-correctrate {
  font-size: 30rpx;
  display: flex;
}

.bold {
  font-size: 30rpx;
  background-color: rgba(255, 255, 255, 0);
  box-sizing: border-box;
  font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif;
  color: #f59a23;
  text-align: left;
  line-height: normal;
  padding: 0 8rpx;
}

.exercisecard-tips {
  font-size: 18rpx;
  color: #888888;
}

.hr{
  height: 3rpx;
  width: 100%;
  background-color: gainsboro;
}

.exercisecard-footer{
  width: 520rpx;
  /* height: 20%; */
  margin-top: auto;
  margin-left: auto;
  margin-right: -24rpx;
}

.exercisecard-time{
  margin-top: 10rpx;
  margin-left: auto;
  margin-right: 20rpx;
  color: #504f4f;
  font-size: 24rpx;
  height: 32rpx;
  width: 380rpx;
  /* text-align: right; */
  font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif;
}

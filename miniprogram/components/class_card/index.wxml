<view class="classcard-container inner-class">
    <view class="classcard-header">
        <image class="classcard-pic" src="{{photo}}"></image>
        <view class="classcard-info">
            <view class="classcard-infotitle">{{title}}</view>
            <view class="classcard-addinfo">{{introduction}}</view>
        </view>
    </view>
    <view class="classcard-footer">
        <view class="hr"/>
        <view class="classcard-teacher">
            <text>{{author}}</text>
            <image wx:if="{{is_collected == true}}" catchtap="onClickCollectedFalse" src="https://6c65-lemon-7glhwqyu5304e1f9-1311072024.tcb.qcloud.la/love.png?sign=0180f45f2c372f276b7f200338ca0217&t=1651498880"></image>
            <image wx:if="{{is_collected == false}}" catchtap="onClickCollectedTrue"  class="gray" src="https://6c65-lemon-7glhwqyu5304e1f9-1311072024.tcb.qcloud.la/love.png?sign=0180f45f2c372f276b7f200338ca0217&t=1651498880"></image>
        </view>
    </view>
</view>
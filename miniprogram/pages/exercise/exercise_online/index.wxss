/* pages/exercise/online_quiz/index.wxss */
.exercise_header {
  height: 92rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  box-shadow: 0px 3px 5px 0px rgba(0, 0, 0, 0.35);
}

.show_index {
  background-color: rgba(255, 255, 255, 0);
  box-sizing: border-box;
  font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif;
  color: #464646;
  line-height: normal;
  font-size: 32rpx;
}

.title-first {
  background-color: rgba(255, 255, 255, 0);
  box-sizing: border-box;
  font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif;
  color: #353535;
  line-height: normal;
  font-size: 32rpx;
}

.sheet {
  width: 50rpx;
  height: 50rpx;
}

.exercise_content {
  height: 100%;
}

.swiper {
  height: 100%;
  width: 100%;
}

.swiper-item {
  box-sizing: border-box;
  padding: 30rpx 40rpx;

  box-sizing: border-box;
 
}

.card {
  height: 100%;
  width: 100%;
  background-color: white;
  border-radius: 30rpx;
  box-shadow: 4rpx 6rpx 10rpx 0 rgba(0, 0, 0, 0.35);
  overflow: hidden;
}

.scroll {
  margin-top: 44rpx;
  height: 820rpx;
}

.title {
  margin: 0 34rpx 60rpx;
}

.two-buttons {
  display: flex;
  justify-content: space-between;
  margin: 50rpx 34rpx
}

.two-buttons view {
    width: 282rpx;
    height: 60rpx;
    line-height: 60rpx !important;
    border-radius: 36rpx;
    background-color: #ffff80;
    box-sizing: border-box;
    font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif;
    color: #333333;
    text-align: center;
    font-size: 28rpx;
    line-height: normal;
}



.choice {
  margin: 0 34rpx;
}

.small-choice {
  font-size: 28rpx;
  width: 594rpx;
  margin: 40rpx 0;
  padding-left: 20rpx;
  border-radius: 30rpx;
  background-color: #fffeb1;
  box-sizing: border-box;
  font-family: 'ArialMT', 'Arial', sans-serif;
  color: #333333;
  overflow: hidden;
}

.small-choice-text {
  min-height: 76rpx;
  line-height: 76rpx;
  /* margin-top: 18rpx;
  margin-bottom: 18rpx; */
}


.text {
  margin: 30rpx 34rpx 0;
  font-size: 28rpx;
  color: #333333;
}

.second-button {
  margin-left: auto;
}

.field {
  --field-input-text-color: rgb(239,179,54);
  --cell-horizontal-padding: 0rpx;
}
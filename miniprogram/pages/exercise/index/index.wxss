.class-header{
    width: 100%;
    height: 180rpx;
    background-color: #FFFFFF;
    box-shadow: 0 10rpx 10rpx gainsboro;
    position: fixed;
    z-index: 10;
    top: 0;
}

.class-headercontainer{
    display: flex;
    justify-content: space-between;
    height: 48rpx;
    padding: 30rpx 40rpx 0;
}

.down{
    height: 30rpx;
    width: 30rpx;
    margin-left: 10rpx;
}

.class-grade{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.class_grade text{
    font-size: 28rpx;
    height: 48rpx;
    line-height: 48rpx;
}

.class-title{
    font-weight: bold;
    font-size: large;
    transform: translateX(-50%);
}

.class-search{
    height: 50rpx;
    width: 50rpx;
    margin-right: 18rpx;
}

.class-note{
    height: 50rpx;
    width: 50rpx;
}

.class-navigation{
    margin-top: 40rpx;
    height: 46rpx;
}

.class-navigation text{
    font-size: medium;
    margin-left: 54rpx;
}

.class-container{
    display: flex;
    flex-direction: column;
    width: 682rpx;
    margin: 0 auto;
    position: relative;
    top: 180rpx;
}

.class-classes{
    width: 90%;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    background-color: #FFFFFF;
    border-radius: 20rpx;
    box-shadow: 10rpx 10rpx 10rpx gainsboro;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
}

.exer-options{
    width: 90%;
    border-radius: 45rpx;
    background-color: #FFFEB1;
    padding: 20rpx;
    font-weight: 250;
    font-size: 30rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.navswitch-style{
    font-size: 35rpx;
    color: #7B4D12;
}



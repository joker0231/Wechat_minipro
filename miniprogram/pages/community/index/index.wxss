.com-header{
    width: 100%;
    height: 110rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 34rpx;
    box-sizing: border-box;
    position: relative;
}

.com-title{
    font-weight: bold;
    font-size: large;
    margin: 0 auto;
}


.com-headerpic{
    height: 50rpx;
    width: 50rpx;
}

.scroll {
    height: 132rpx;
    margin-top: 4rpx;
}


.com-bg {
    width: 100%;
    box-sizing: border-box;
    background-color: #FFFFFF;
    border-radius: 20rpx;
    box-shadow: 10rpx 10rpx 10rpx gainsboro;
    padding: 16rpx 20rpx 8rpx;
}

.com-container{
    display: flex;
    flex-direction: column;
    width: 682rpx;
    box-sizing: border-box;
    margin: 0 auto;
    position: relative;
    justify-content: center;
    align-items: center;
}

.com-container .com-bg + .com-bg {
    margin-top: 20rpx;
}

.com-down{
    display: inline;
    height: 25rpx;
    width: 25rpx;
    margin-left: 6rpx;
}

.community-filter {
    display: flex;
    height: 38rpx;
    align-items: center;
    justify-content: center;
    margin-left: 20rpx;
}


.com-cardhead{
    display: flex;
    /* align-items: flex-start; */
    height: 78rpx;
    background-color: white;
    padding: 20rpx ;
    box-sizing: border-box;
    width: 646rpx;
    margin-top: 0 auto;
    /* border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx; */

}

.head-text {
    height: 38rpx;
    line-height: 38rpx;
    font-size: 28rpx;
    background-color: rgba(255, 255, 255, 0);
    box-sizing: border-box;
    font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif;
    color: #353535;
}
        

.head-choose-text {
    font-size: 25rpx;
    height: 38rpx;
    line-height: 38rpx;
}


.com-cardcontainer {
    overflow: hidden;
    margin-top: -20rpx;
}

.sticky .van-sticky-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
}

.radio {
    font-size: 25rpx;
    --radio-label-margin: 10rpx;
    margin-left: 14rpx;
    --padding-sm: 10rpx
}

.card {
    margin-top: 20rpx;
}

.com-bg text {
    font-size: 28rpx;
    background-color: rgba(255, 255, 255, 0);
    box-sizing: border-box;
    font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif;
    color: #353535;
    text-align: left;
    line-height: normal;
    height: 19rpx;
    line-height: 19rpx;
    /* font-weight: 500; */
}

.second {
    padding: 0 18rpx 20rpx;
}

.post-new {
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    bottom: 40rpx;
    right: 56rpx;
    background-color: white;
    border-radius: 50%;
}


.new-image {
    width: 100rpx;
    height: 100rpx;
}
/* pages/community/post_new/index.wxss */
.post-card {
  width: 682rpx;
  height: 1016rpx;
  background-color: white;
  margin: 44rpx auto 0;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  box-shadow: 4rpx 6rpx 10rpx 0rpx rgba(0, 0, 0, 0.35);
  color: #333333;
  text-align: left;
  line-height: normal;
  padding: 18rpx 20rpx 44rpx;
}


.post-select {
  display: flex;
  align-items: center;
}


.select-title {
  background-color: rgba(255, 255, 255, 0);
  box-sizing: border-box;
  font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif;
  color: #353535;
  text-align: left;
  line-height: normal;
  font-size: 30rpx
}


.com-down {
  width: 36rpx;
  height: 36rpx;
  margin-left: 8rpx;
}


.selected-card {
  margin-top: 22rpx;
}

.input-content {
  margin-top: 40rpx;
  --cell-vertical-padding: 2rpx;
  --cell-horizontal-padding: 0;
  height: 522rpx;
  /* background-color: pink; */
}

.scroll {
  height: 602rpx;
}

.post-button {
  width: 468rpx;
  height: 84rpx;
  border-radius: 68rpx;
  border: 2rpx solid #dfdfdf;
  background-color: #ffff80;
  box-sizing: border-box;
  font-family: 'PingFangSC-Regular', 'PingFang SC', sans-serif;
  color: #000000;
  text-align: center;
  line-height: normal;
  line-height: 84rpx;
  margin: 30rpx auto;
}